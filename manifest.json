{
	"manifest_version": 2,
	
	"version": "1.0",
	"version_name": "1.0 dev",
	
	"name": "Memo",
	"description": "Memo is a chrome extension for efficient memorizing english words while you surfing net. Based on spaced repetitions.",
	
	//"default_locale": "ru", need for internationalization, while only ru

	"browser_action": {
    "default_icon": "icon_48.png",
    "default_popup": "popup.html"
  },

  "permissions": [
  	"storage",
  	"notifications",
    "https://googleapis.com/"
  ]
}