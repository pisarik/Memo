{
	"manifest_version": 2,
	
	"version": "1.0",
	"version_name": "1.0 dev",
	
	"name": "Memo",
	"description": "Memo is a chrome extension for efficient memorizing english words while you surfing net. Based on spaced repetitions.",
	
	//"default_locale": "ru", need for internationalization, while only ru

	// "browser_action": {
 //    "default_icon": "icon_48.png",
 //    "default_popup": "popup.html"
 //  },

 	"background":{
 		"scripts": ["background.js", "storageManager.js", "cardScheduler.js"]
 	},

  "content_scripts": [
  	{
  		"matches": ["*://*/*"],
  		"js": ["3rdparty/jquery-3.2.1.min.js", "3rdparty/bootstrap-3.3.7.min.js", 
  			"popover/template.js",
  			"wordLogger.js", "card.js", "translater.js", "storageManager.js",
  			"utilities.js", "cardScheduler.js"			 
  			],
  		"css": ["popover/memoPopover.css"],
  		"run_at": "document_end"
  	}
  ],

  "permissions": [
  	"storage",
  	"alarms",
  	"notifications",
    "https://ajax.googleapis.com/"
  ]
}